mixin navLink(menuLink, text)
  li.nav__item
    a(href=menuLink).nav__link=text

mixin product(photo, name, price)
  .product
    if(photo)
      .product__photo
    .product__content
      span=name
      span.price=price

mixin icon(name, mod)
  if(mod)
    svg(class="svg-sprite-icon icon-" + name + ' ' + mod)
      use(xlink:href="static/img/sprites/symbol/sprite.svg#" + name)
  else
    svg(class="svg-sprite-icon icon-" + name)
      use(xlink:href="static/img/sprites/symbol/sprite.svg#" + name)
